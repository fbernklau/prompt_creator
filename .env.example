# Public hostname served by Traefik for this app.
PROMPTS_HOST=prompts.berncloud.eu
# PostgreSQL settings used by both db container and app connection string.
POSTGRES_DB=prompt_creator
POSTGRES_USER=prompt
POSTGRES_PASSWORD=Change.This.To.Secure.Password

# Keep true in production so only authenticated users can use the app.
AUTH_REQUIRED=true
# Authenticated user must have this group in Authentik.
OIDC_REQUIRED_GROUP=teachers

# External Docker network where Traefik is attached.
TRAEFIK_DOCKER_NETWORK=proxy
# ForwardAuth middleware name exposed by Authentik outpost in Traefik.
TRAEFIK_AUTH_MIDDLEWARE=authentik@docker
